
#include <iostream>
using namespace std;

class Person {
  public:
    string name;
    int age;

    void display() {
      cout << "Name: " << name << endl;
      cout << "Age: " << age << endl;
    }
};

int main() {
  Person person1; // Declare an object of Person class

  person1.name = "John"; // Assign values to object's data members
  person1.age = 25;

  person1.display(); // Call the object's member function to display the data

  return 0;
}
